{
  "name": "sogni-makeover",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sogni-AI/sogni-makeup.git"
  },
  "homepage": "https://makeover.sogni.ai",
  "bugs": {
    "url": "https://github.com/Sogni-AI/sogni-makeup/issues"
  },
  "type": "module",
  "scripts": {
    "dev": "npx kill-port 5176 && vite --host 0.0.0.0 --port 5176 --strictPort",
    "build": "tsc && vite build",
    "build:staging": "tsc && vite build --mode staging",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --report-unused-disable-directives --max-warnings 0",
    "server:install": "cd server && npm install",
    "server:dev": "cd server && npm run dev",
    "server:start": "cd server && npm start",
    "prepare": "npm run server:install",
    "preview": "vite preview",
    "validate:useeffect": "node scripts/validate-useeffect.js",
    "precommit": "npm run validate:useeffect",
    "deploy:production": "bash scripts/deploy-production.sh",
    "deploy:staging": "bash scripts/deploy-staging.sh"
  },
  "dependencies": {
    "@sogni-ai/sogni-client": "^4.0.0-alpha.64",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "framer-motion": "^12.9.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.16",
    "dotenv": "^16.5.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.0",
    "vite": "^6.2.2"
  }
}
